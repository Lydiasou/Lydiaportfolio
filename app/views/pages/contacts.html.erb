<div class="box-content">
  <div class="header d-flex justify-content-between">
    <div class="d-flex align-items-center">
      <ul class="d-flex nav-bar mt-3">
        <li>
          <%= link_to 'Accueil', '../' %>
        </li>
        <li>
          <%= link_to "A propos","/apropos"%>
        </li>
        <li>
          <a href="#">Contact moi</a>
        </li>
        <%# <li>
          <%= link_to 'Portfolio', '/portfolio', class: ""%>
        <%# </li> %>
      </ul>
    </div>
    <div class="d-flex justify-content-end">
      <ul class="d-flex nav-icons">
        <li>
          <%= link_to 'https://github.com/Lydiasou', target: :_blank do %>
            <i class="fa-brands fa-github"></i>
          <% end %>
        </li>
        <li>
          <%= link_to 'https://www.linkedin.com/in/lydiasoula/', target: :_blank  do %>
            <i class="fa-brands fa-linkedin"></i>
          <% end %>
        </li>
      </ul>
      <div class="logo-border">
        <h6 class="logo">
          <%= cl_image_tag("https://res.cloudinary.com/dsc1uchot/image/upload/v1663690029/Portfolio/Cool_Kids_-_Avatar_gjgmuv.png", width: 50, height: 50, crop: :fill) %>
        </h6>
      </div>
    </div>
  </div>
  <div class="background-contact">
    <div class="contact-presentation">
      <h3>You can find me</h3>
      <p>je suis dispo sur Git</p>
      <p>Dispo aussi sur Linkdln</p>
    </div>
    <div class="box-form">
      <h3>Get in touch </h3>
      <form action="https://formsubmit.co/lydiasoula@outlook.com" method="POST">
        <div class="name mb-2 mt-3">
          <label for="name" class="mb-2">Comment t'appelles-tu ?</label>
          <input type="text" name="name" placeholder="Mark Zuckenberg" required>
        </div>
        <div class="email mb-3">
          <label for="email" class="mb-2">Je peux te répondre par e-mail ! </label>
          <input type="email" name="email" placeholder= "marcky@fb.com" required>
        </div>
        <div class="societe mb-3">
          <label for="societe"class="mb-2" >Pour quelle organisation à tu besoin de mes services ?</label>
          <input type="societe " name="societe" placeholder="Facebook">
        </div>
        <div class="subject">
          <label for="subject"class="mb-2" >Dit moi en plus sur ton projet !</label>
          <input class="subject-form"type="subject" name="subject" placeholder="Automatisation de mes messages messenger dans le cadre..." required>
        </div>
        <button type="submit" class="btn-form">Je me lance ! </button>
      </form>
    </div>
  </div>
</div>
